<VirtualHost *:80>
     # Add machine's IP address (use ifconfig command)
		ServerName {{ ansible_default_ipv4.address }}
                WSGIScriptAlias / /var/www/{{ app_name }}/flaskapp.wsgi
		<Directory /var/www/{{ app_name }}/FlaskApp/>
                        Options FollowSymLinks
                        AllowOverride None
                        Require all granted
		</Directory>
		Alias /static /var/www/{{ app_name }}/FlaskApp/static
		<Directory /var/www/{{ app_name }}/FlaskApp/static/>
                        Options FollowSymLinks
                        AllowOverride None
                        Require all granted
		</Directory>
		ErrorLog ${APACHE_LOG_DIR}/error.log
		LogLevel warn
		CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
